<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Pierwszy</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Powitanie</servlet-name>
    <servlet-class>cwiczenia.serwlety.PierwszySerwlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Powitanie</servlet-name>
    <url-pattern>/witaj</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Pobieranie</servlet-name>
    <servlet-class>cwiczenia.serwlety.Pobieranie</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Pobieranie</servlet-name>
    <url-pattern>/pobierz</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Formularze</servlet-name>
    <servlet-class>cwiczenia.serwlety.Formularze</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Formularze</servlet-name>
    <url-pattern>/formularze</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Ciastka</servlet-name>
    <servlet-class>cwiczenia.serwlety.Cookies</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Ciastka</servlet-name>
    <url-pattern>/ciastka</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Sesja</servlet-name>
    <servlet-class>cwiczenia.serwlety.Sesja</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Sesja</servlet-name>
    <url-pattern>/sesja</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Headers</servlet-name>
    <servlet-class>cwiczenia.serwlety.Headers</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Headers</servlet-name>
    <url-pattern>/naglowki</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>FiltrOpcja</servlet-name>
  	<servlet-class>cwiczenia.serwlety.FiltrSerwlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FiltrOpcja</servlet-name>
  	<url-pattern>/filtrOpcja</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>cwiczenia.sluchacze.SluchaczeKontekstu</listener-class>
  </listener>
<!--   <listener> -->
<!--   	<listener-class>cwiczenia.sluchacze.KreatorSluchaczy</listener-class> -->
<!--   </listener> -->
<login-config>
	<auth-method>BASIC</auth-method>
</login-config>
<security-role>
	<role-name>admin</role-name>
</security-role>
<security-role>
	<role-name>uzytkownik</role-name>
</security-role>
<security-constraint>
	<web-resource-collection>
		<web-resource-name>Regula</web-resource-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>/sesja</url-pattern>
		<url-pattern>/formularze</url-pattern>
		<url-pattern>/pobierz</url-pattern>
		<http-method>GET</http-method>	
	</web-resource-collection>
	<auth-constraint>
		<role-name>admin</role-name>
	</auth-constraint>
	<user-data-constraint>
		<transport-guarantee>NONE</transport-guarantee>
	</user-data-constraint>
</security-constraint>
<filter>
	<filter-name>FiltrRegulowy</filter-name>
	<filter-class>cwiczenia.filtry.FiltrRegulowy</filter-class>
</filter>
<filter-mapping>
	<filter-name>FiltrRegulowy</filter-name>
	<url-pattern>/filtrOpcja</url-pattern>
</filter-mapping>
<servlet>
	<servlet-name>Powitanie2</servlet-name>
	<servlet-class>cwiczenia.dispatch.Powitanie</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>Powitanie2</servlet-name>
	<url-pattern>/witaj2</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>ListaUzytkownikow</servlet-name>
	<servlet-class>cwiczenia.dispatch.ListaUzytkownikow</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>ListaUzytkownikow</servlet-name>
	<url-pattern>/drugi</url-pattern>
</servlet-mapping>
</web-app>